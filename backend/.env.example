# Backend Environment Configuration
# Copy this file to .env and update with your actual settings

# SendGrid Email Alert Configuration
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=your-email@example.com
SENDGRID_FROM_NAME=AI Eyes Security System

# Alert Recipients (comma-separated email addresses)
ALERT_RECIPIENTS=recipient1@example.com,recipient2@example.com

# Authorized Persons Email Configuration
MANAGER_PRAJWAL_EMAIL=manager@example.com
FARMER_BASAVA_EMAIL=farmer@example.com
OWNER_RAJASEKHAR_EMAIL=owner@example.com

# Email Alerts Configuration
ENABLE_EMAIL_ALERTS=true

# MongoDB Configuration
# Add your MongoDB connection string here
MONGODB_URI=mongodb://localhost:27017/ai_eyes

# Other Backend Settings
# Add additional backend configuration here
